
@{
    ViewBag.Title = "Map";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Map</h2>

<div id='map' style='width: 100%; height: 300px;'></div>

@section Scripts
{
    <script src='https://api.mapbox.com/mapbox-gl-js/v1.4.1/mapbox-gl.js'></script>
    <script>
        mapboxgl.accessToken = 'pk.eyJ1IjoieTFmNTIyNTAwIiwiYSI6ImNrMjNqcjUxZTAwcnAzbnA0MWRzbGp5bnQifQ.801dZAhVgYW7oFzywxNcOg';

        var map = new mapboxgl.Map({
        container: 'map',
        style: 'mapbox://styles/mapbox/dark-v10',
        center: [144.963058, -37.813629],
        zoom: 8
        });

        var geojson = {
            type: 'FeatureCollection',
            features: [{
                type: 'Feature',
                geometry: {
                    type: 'Point',
                    coordinates: [145.126600, -37.781136]
                },
                properties: {
                    title: 'EasyGo',
                    description: 'Our company address is 619 Doncaster Rd !'
                }
            }]


        };
        // add markers to map
        geojson.features.forEach(function (marker) {

        // create a HTML element for each feature
            var el = document.createElement('div');
            el.className = 'marker';

        // make a marker for each feature and add to the map
            new mapboxgl.Marker(el)
            .setLngLat(marker.geometry.coordinates)
            .setPopup(new mapboxgl.Popup({ offset: 25 }) // add popups
                .setHTML('<h3>' + marker.properties.title + '</h3><p>' + marker.properties.description + '</p>'))
            .addTo(map);
        });

        map.addControl(new mapboxgl.GeolocateControl({
            positionOptions: {
                enableHighAccuracy: true
            },
            trackUserLocation: true
        }))
        

    </script>
    }

<link href='https://api.mapbox.com/mapbox-gl-js/v1.4.1/mapbox-gl.css' rel='stylesheet' />
<style>

    .marker {
        background-image: url('../../Content/mapbox-icon.png');
        background-size: cover;
        width: 25px;
        height: 25px;
        border-radius: 50%;
        cursor: pointer;
    }

    .mapboxgl-popup {
        max-width: 200px;
    }

    .mapboxgl-popup-content {
        text-align: center;
        font-family: 'Open Sans', sans-serif;
    }
</style>